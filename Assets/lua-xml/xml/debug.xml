<!--
    
    This is the debug panel, which gives us some simple sliders to control the height of the castel and wall with

-->
<Panel 
    height = "100"
    width = "300"
    color = "#333333"
    rectAlignment = "UpperCenter"
    allowDragging   = "true"
    returnToOriginalPositionWhenReleased = "false"
    >
    <VerticalLayout>
        <Slider onValueChanged="xml_updateCastleHeight" minValue="0" maxValue="100" wholeNumbers="true"></Slider>
        <Slider onValueChanged="xml_updateWallHeight" minValue="0" maxValue="100" wholeNumbers="true"></Slider>
    </VerticalLayout>
</Panel>