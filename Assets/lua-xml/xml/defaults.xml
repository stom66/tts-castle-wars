<!--

    Defaults

    This is the main "stylesheet" for the XML UI. 
-->

<Defaults>

<!-- Info Window-->
<Mask class         = "mask_info"
    width           = "900"
    preferredWidth  = "900"
    height          = "480"
    preferredHeight = "480"
    rectAlignment   = "MiddleCenter"
    image           = "mask_info"
    allowDragging   = "true"
    returnToOriginalPositionWhenReleased = "false"
    />
    <Panel class      = "panel_info"
        color         = "#cccccc"
        />
    
    <Button class       = "btn_info_close"
        onClick         = "xml_hideInfo"
        width           = "28"
        preferredWidth  = "28"
        height          = "28"
        preferredHeight = "28"
        rectAlignment   = "UpperRight"
        offsetXY        = "-26 -26"
        colors          = "#00000000|#cce7ffdd|#ddddddcc|#333333"
        />

    <HorizontalLayout 
        class         = "panel_info>@HorizontalLayout"
        spacing       = "10"
        width         = "640"
        offsetXY      = "0 125"
        height        = "75"
        padding       = "10 10 10 10"
        rectAlignment = "LowerCenter"
        />
        <!--   colors          = "#0d679c|#1F52A7|#00348a|#333333" -->
        <Button class          = "panel_info>@HorizontalLayout>@Button"
            colors             = "#618c2d|#73A23B|#578223|#444444"
            preferredHeight    = "55"
            height             = "55"
            width              = "220"
            preferredWidth     = "220"
            />
            <Button class       = "btn_info_wiki"
                onClick         = "tablet_showWiki"
                icon            = "btn_wiki"
                width           = "180"
                preferredWidth  = "180"
                />
            <Button class       = "btn_info_tutorial"
                onClick         = "tablet_showTutorial"
                icon            = "btn_tutorial"
                />
            <Button class       = "btn_info_workshop"
                onClick         = "tablet_showWorkshop"
                icon            = "btn_workshop"
                />
<!-- Tooltip styles -->

<!-- Deck Builder -->
<Panel class      = "deck_builder"
    rectAlignment = "MiddleCenter"
    width         = "1000"
    height        = "600"
    allowDragging = "true"
    color         = "#cccccc"
    padding       = "20 20 20 20"
    outline       = "#666666"
    outlineSize   = "2 2"
    returnToOriginalPositionWhenReleased = "false"
    />

    <Button class       = "btn_deckBuilder_close"
        onClick         = "xml_hidedeckBuilder"
        width           = "28"
        preferredWidth  = "28"
        height          = "28"
        preferredHeight = "28"
        rectAlignment   = "UpperRight"
        offsetXY        = "-26 -26"
        colors          = "#00000000|#cce7ffdd|#ddddddcc|#333333"
        />

    <Slider class="deck_builder:@Slider"
        minValue = "0"
        maxValue = "5"
        value    = "2"
        wholeNumbers = "true"
        onValueChanged = "xml_db_sliderChange"
        />

    <TableLayout class="deck_builder>@TableLayout"
        cellBackgroundColor = "none"
            padding = "5 5 5 5"
            cellSpacing = "5"
        />
        
        <Cell class = "deck_builder:@Cell"
            padding = "5 5 5 5"
            />
            <Text class   = "deck_builder:@Cell:@Text"
                color     = "#ffffff" 
                />
        <Cell class                    = "deck_builder:bg_blue"
            dontUseTableCellBackground = "true"
            color                      = "#03305A" 
            />
        <Cell class                    = "deck_builder:bg_red"
            dontUseTableCellBackground = "true"
            color                      = "#7E121F" 
            />
        <Cell class                    = "deck_builder:bg_green"
            dontUseTableCellBackground = "true"
            color                      = "##034123" 
            />
        <Cell class                    = "deck_builder:bg_gold"
            dontUseTableCellBackground = "true"
            color                      = "#BA7F07" 
            />



<!-- Player Panels-->   
    <Panel class        = "player_panel"
        width           = "300"
        preferredWidth  = "300"
        height          = "720"
        preferredHeight = "720"
        allowDragging   = "true"
        scale           = "0.75 0.75 0.75"
        returnToOriginalPositionWhenReleased = "false"
        />
        <Panel class      = "float_left"
            rectAlignment = "UpperLeft"
            offsetXY      = "100 -100"
            />
        <Panel class      = "float_right"
            rectAlignment = "UpperRight"
            offsetXY      = "-40 -100"
            />

    <!-- Score changes panel-->
    <VerticalLayout
        class           = "scorePanel"
        width           = "100"
        preferredWidth  = "100"
        spacing         = "20"
        padding         = "15 15 95 140"
        />
            <Text
                class = "scorePanel_blue>@HorizontalLayout>@Text"
                color = "rgba(0, 0.45, 0.71, 1)"
                />
            <Text
                class = "scorePanel_red>@HorizontalLayout>@Text"
                color = "rgba(0.85, 0.2, 0.3, 1)" 
                />

            <HorizontalLayout
                class           = "scorePanel>@HorizontalLayout"
                height          = "100"
                preferredHeight = "100"
                />
                <Text
                    class             = "scorePanel>@HorizontalLayout>@Text"
                    fontSize          = "32"
                    fontStyle         = "Bold"
                    showAnimation     = "FadeIn"
                    hideAnimation     = "FadeOut"
                    animationDuration = "1.0"
                    active            = "false"
                    />

    <!-- Player name banner -->
    <Text class="playerName"
        rectAlignment        = "UpperLeft"
        alignment            = "MiddleCenter"
        minHeight            = "60"
        height               = "60"
        preferredHeight      = "60"
        minWidth             = "240"
        width                = "240"
        preferredWidth       = "240"
        color                = "#eeeeee"
        resizeTextForBestFit = "true"
        />

    <!-- Main VerticalLayout containing all the resource sections -->
    <VerticalLayout
        class                  = "playerPanel"
        spacing                = "20"
        padding                = "10 10 95 10"
        childForceExpandWidth  = "true"
        childForceExpandHeight = "false"
        width                  = "200"
        preferredWidth         = "200"
        />

    <HorizontalLayout
        childForceExpandWidth  = "false"
        childForceExpandHeight = "false" />


    <!-- Resource sections -->
    <VerticalLayout class = "section"
        width             = "180"
        preferredWidth    = "180"
        minWidth          = "180"
        height            = "100"
        preferredHeight   = "100"
        minHeight         = "100"
        spacing           = "5"
        padding           = "15 15 5 5"
        />
        <VerticalLayout class="bg_red"   color="#9a1527" />
        <VerticalLayout class="bg_green" color="#004f2d" />
        <VerticalLayout class="bg_blue"  color="#003b73" />
        <VerticalLayout class="bg_black" color="Black" />
        <VerticalLayout class="bg_gold"  color="#e19a02" />

        <!-- Text/Stats in sections -->
        <Text class         = "section>@HorizontalLayout:@Text"
            alignment       = "MiddleCenter"
            color           = "White"
            fontStyle       = "Bold"
            fontSize        = "40"
            width           = "80"
            preferredWidth  = "80"
            height          = "60"
            preferredHeight = "60"
            backgroundColor = "Black"
            />

        <!-- Images in sections -->
        <Image 
            class           = "section>@HorizontalLayout:@Image"
            preserveAspect  = "true"
            width           = "70"
            preferredWidth  = "70"
            height          = "60"
            preferredHeight = "60"
            />
</Defaults>
