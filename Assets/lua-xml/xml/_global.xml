<Panel class="player_panel player_blue">
    <VerticalLayout class="scorePanel scorePanel_blue">
        <HorizontalLayout><Text id="blue_builders_change" text="+1"></Text></HorizontalLayout>
        <HorizontalLayout><Text id="blue_bricks_change" text="+1"></Text></HorizontalLayout>
        <HorizontalLayout><Text id="blue_soldiers_change" text="+1"></Text></HorizontalLayout>
        <HorizontalLayout><Text id="blue_swords_change" text="+1"></Text></HorizontalLayout>
        <HorizontalLayout><Text id="blue_mages_change" text="+1"></Text></HorizontalLayout>
        <HorizontalLayout><Text id="blue_crystals_change" text="+1"></Text></HorizontalLayout>
        <HorizontalLayout><Text id="blue_wall_change" text="+1"></Text></HorizontalLayout>
        <HorizontalLayout><Text id="blue_castle_change" text="+1"></Text></HorizontalLayout>
    </VerticalLayout>
    <Mask class="mask_panel mask_blue" active="true">
        <VerticalLayout class="playerPanel playerPanel_blue">
            <!-- Builders and Bricks -->
            <Mask class="mask_section">
                <VerticalLayout class="section bg_green">
                    <HorizontalLayout>
                        <Image image="icon_builders"></Image>
                        <Text id="blue_builders" text="2"></Text>
                    </HorizontalLayout>
                    <HorizontalLayout>
                        <Image id="blue_icon_bricks" image="icon_bricks"></Image>
                        <Text id="blue_bricks" text="5"></Text>
                    </HorizontalLayout>
                </VerticalLayout>
            </Mask>

            <!-- Soldiers and Swords -->
            <Mask class="mask_section">
                <VerticalLayout class="section bg_red">
                    <HorizontalLayout>
                        <Image image="icon_soldiers"></Image>
                        <Text id="blue_soldiers" text="2"></Text>
                    </HorizontalLayout>
                    <HorizontalLayout>
                        <Image id="blue_icon_swords" image="icon_swords"></Image>
                        <Text id="blue_swords" text="5"></Text>
                    </HorizontalLayout>
                </VerticalLayout>
            </Mask>

            <!-- Mages and Crystals -->
            <Mask class="mask_section">
                <VerticalLayout class="section bg_blue">
                    <HorizontalLayout>
                        <Image image="icon_wizards"></Image>
                        <Text id="blue_mages" text="2"></Text>
                    </HorizontalLayout>
                    <HorizontalLayout>
                        <Image id="blue_icon_crystals" image="icon_crystals"></Image>
                        <Text id="blue_crystals" text="5"></Text>
                    </HorizontalLayout>
                </VerticalLayout>
            </Mask>

            <!-- Castle and Wall -->
            <Mask class="mask_section">
                <VerticalLayout class="section bg_black">
                    <HorizontalLayout>
                        <Image image="icon_wall"></Image>
                        <Text id="blue_wall" text="10"></Text>
                    </HorizontalLayout>
                    <HorizontalLayout>
                        <Image image="icon_castle"></Image>
                        <Text id="blue_castle" text="30"></Text>
                    </HorizontalLayout>
                </VerticalLayout>
            </Mask>

            <!-- Buffs -->
            <Mask class="mask_section">
                <VerticalLayout class="section bg_gold">
                    <HorizontalLayout>
                        <Image id="blue_buff_build" image="icon_bricks" color="#333333" />
                        <Image id="blue_buff_attack" image="icon_swords" color="#333333" />
                    </HorizontalLayout>
                    <HorizontalLayout>
                        <Image id="blue_buff_resources" image="icon_chest" color="#333333" />
                        <Image id="blue_buff_defence" image="icon_shield" color="#333333" />
                    </HorizontalLayout>
                </VerticalLayout>
            </Mask>
        </VerticalLayout>
    </Mask>
</Panel>

