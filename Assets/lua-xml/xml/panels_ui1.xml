<Panel class="player_panel float_left" visibility="blue|white|black|grey">
    <!-- Panel background image -->
    <Image 
        image    = "panel_blue"
        offsetXY = "-50 0">
    </Image>

    <!--Player name -->
    <Text id     = "ui1_blue_playerName" 
        class    = "playerName" 
        text     = "Player Blue"
        offsetXY = "-18 0">
    </Text>
    <HorizontalLayout>
        <VerticalLayout class="playerPanel">            
            <!-- Builders and Bricks -->
            <VerticalLayout class="section">
                <HorizontalLayout>
                    <Image image="icon_builders"></Image>
                    <Text id="ui1_blue_builders" text="2"></Text>
                </HorizontalLayout>
                <HorizontalLayout>
                    <Image id="ui1_blue_icon_bricks" image="icon_bricks"></Image>
                    <Text id="ui1_blue_bricks" text="5"></Text>
                </HorizontalLayout>
            </VerticalLayout>

            <!-- Soldiers and Swords -->
            <VerticalLayout class="section">
                <HorizontalLayout>
                    <Image image="icon_soldiers"></Image>
                    <Text id="ui1_blue_soldiers" text="2"></Text>
                </HorizontalLayout>
                <HorizontalLayout>
                    <Image id="ui1_blue_icon_swords" image="icon_swords"></Image>
                    <Text id="ui1_blue_swords" text="5"></Text>
                </HorizontalLayout>
            </VerticalLayout>

            <!-- Mages and Crystals -->
            <VerticalLayout class="section">
                <HorizontalLayout>
                    <Image image="icon_wizards"></Image>
                    <Text id="ui1_blue_mages" text="2"></Text>
                </HorizontalLayout>
                <HorizontalLayout>
                    <Image id="ui1_blue_icon_crystals" image="icon_crystals"></Image>
                    <Text id="ui1_blue_crystals" text="5"></Text>
                </HorizontalLayout>
            </VerticalLayout>

            <!-- Castle and Wall -->
            <VerticalLayout class="section">
                <HorizontalLayout>
                    <Image image="icon_wall"></Image>
                    <Text id="ui1_blue_wall" text="10"></Text>
                </HorizontalLayout>
                <HorizontalLayout>
                    <Image image="icon_castle"></Image>
                    <Text id="ui1_blue_castle" text="30"></Text>
                </HorizontalLayout>
            </VerticalLayout>

            <!-- Buffs -->
            <VerticalLayout class="section">
                <HorizontalLayout>
                    <Image id="ui1_blue_buff_build" image="icon_bricks" color="#333333" />
                    <Image id="ui1_blue_buff_attack" image="icon_swords" color="#333333" />
                </HorizontalLayout>
                <HorizontalLayout>
                    <Image id="ui1_blue_buff_resources" image="icon_chest" color="#333333" />
                    <Image id="ui1_blue_buff_defence" image="icon_shield" color="#333333" />
                </HorizontalLayout>
            </VerticalLayout>
        </VerticalLayout>
        <!-- Score change panel -->
        <VerticalLayout class="scorePanel scorePanel_blue">
            <HorizontalLayout><Text id="ui1_blue_builders_change" text="+1"></Text></HorizontalLayout>
            <HorizontalLayout><Text id="ui1_blue_bricks_change" text="+1"></Text></HorizontalLayout>
            <HorizontalLayout><Text id="ui1_blue_soldiers_change" text="+1"></Text></HorizontalLayout>
            <HorizontalLayout><Text id="ui1_blue_swords_change" text="+1"></Text></HorizontalLayout>
            <HorizontalLayout><Text id="ui1_blue_mages_change" text="+1"></Text></HorizontalLayout>
            <HorizontalLayout><Text id="ui1_blue_crystals_change" text="+1"></Text></HorizontalLayout>
            <HorizontalLayout><Text id="ui1_blue_wall_change" text="+1"></Text></HorizontalLayout>
            <HorizontalLayout><Text id="ui1_blue_castle_change" text="+1"></Text></HorizontalLayout>
        </VerticalLayout>
    </HorizontalLayout>
</Panel>

